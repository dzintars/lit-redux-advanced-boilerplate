{
	"compilerOptions": {
		"rootDir": "src/",
		"outDir": "dist",
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": ["es2017", "dom"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": false,
		"noImplicitThis": true,
		"noImplicitAny": false,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
